<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SQLiteTutorial5.Views.AddBookPage"
             Title="Add Book">
    <VerticalStackLayout Spacing="10" Margin="10">
        <Entry x:Name="TitleEntry" Placeholder="Title" />
        <Entry x:Name="AuthorEntry" Placeholder="Author" />
        <Entry x:Name="GenreEntry" Placeholder="Genre" />
        <Entry x:Name="YearEntry" Placeholder="Year" Keyboard="Numeric" />
        <Button Text="Save" Clicked="OnSaveClicked" />
        <Button Text="Back" Clicked="OnBackClicked" />
    </VerticalStackLayout>
</ContentPage>